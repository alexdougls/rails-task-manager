<div class="container">
  <h1>My tasks</h1>
  <% @tasks.each do |task| %>
    <div class="tasks">
      <input type="checkbox"  <%= 'checked' if task.completed %>>
      <%= link_to task.title, task_path(task) %>
    </div>
  <% end %>

  <%= link_to 'Add new task', new_task_path, :class => 'btn btn-primary' %>
</div>
