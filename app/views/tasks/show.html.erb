<div class="container">
  <h1><%= @task.title %></h1>

  <div class="tasks d-flex align-items-center flex-row">
    <p class="task"><%= @task.details %></p>
    <input class="input" type="checkbox"  <%= 'checked' if @task.completed %>>
  </div>


  <%= link_to 'Back to the list', tasks_path, :class => 'btn btn-primary' %>



  <%= link_to 'Edit this task',  edit_task_path(@task), :class => 'btn btn-primary' %>

  <%= link_to "Delete this task",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure?" },
              :class => 'btn btn-primary' %>
</div>

